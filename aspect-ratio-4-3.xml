<theme>

	<variant name="gamelist-textlist-basic,gamelist-textlist-video,gamelist-textlist-detailed,gamelist-elementflix, gamelist-grid-small,gamelist-grid-large">
		<view name="system">
			<image name="cover_list">
				<pos>0 -0.075</pos>
			</image>
		</view>
	</variant>
	
	<view name="system">
		<carousel name="systemcarousel">
			<itemSize>0.2813 0.25</itemSize>
			<maxItemCount>3.2</maxItemCount>
			<horizontalOffset>-0.245</horizontalOffset>
		</carousel>
	</view>
	
	<variant name="gamelist-textlist-basic">
		<view name="gamelist">
			<image name="cover_list">
				<pos>0 -0.075</pos>
			</image>
		</view>
	</variant>
	<variant name="gamelist-textlist-basic-video">
		<view name="gamelist">
			<image name="cover_list">
				<pos>0 -0.075</pos>
			</image>
		</view>
	</variant>

</theme>